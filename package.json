{
  "name": "marzpay-js",
  "version": "1.0.0",
  "description": "Official JavaScript SDK for MarzPay - Mobile Money Payment Platform for Uganda",
  "main": "dist/marzpay.js",
  "module": "dist/marzpay.esm.js",
  "types": "dist/marzpay.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test:ci && npm run build"
  },
  "keywords": [
    "marzpay",
    "mobile-money",
    "uganda",
    "payments",
    "collections",
    "disbursements",
    "api",
    "sdk"
  ],
  "author": "MarzPay Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Katznicho/marzpay-js.git"
  },
  "bugs": {
    "url": "https://github.com/Katznicho/marzpay-js/issues"
  },
  "homepage": "https://github.com/Katznicho/marzpay-js#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "rollup": "^3.28.0",
    "rollup-plugin-dts": "^6.0.0"
  },
  "dependencies": {
    "uuid": "^9.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
